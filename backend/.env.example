# Network endpoints (no private keys)
STARKNET_RPC=https://starknet-goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
EVM_RPC=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
STARKNET_NETWORK=goerli-alpha

# Contract addresses (deployed contracts)
STARKNET_PAYROLL_CONTRACT=
STARKNET_LOAN_ESCROW_CONTRACT=
STARKNET_VERIFIER_CONTRACT=
EVM_ESCROW_CONTRACT=
EVM_IDENTITY_REVEAL_CONTRACT=

# IPFS / pinning service (public endpoints and API keys)
IPFS_API_URL=https://api.pinata.cloud
IPFS_API_KEY=YOUR_PINATA_API_KEY
IPFS_API_SECRET=YOUR_PINATA_API_SECRET
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Payroll provider client IDs (public) - OAuth secrets handled securely
PLAID_CLIENT_ID=YOUR_PLAID_CLIENT_ID
PLAID_SECRET=YOUR_PLAID_SECRET
PLAID_ENV=sandbox
PLAID_REDIRECT_URI=http://localhost:3000/api/payroll/callback


# Relayer configuration (optional)
RELAYER_ENDPOINT=https://relayer.example.com
RELAYER_FEE_ACCOUNT=0x0
USE_RELAYER=false

# Application settings
PORT=3000
NODE_ENV=development
DISPUTE_WINDOW_SECONDS=604800
TRUSTEE_THRESHOLD=2
TRUSTEE_TOTAL=3

# Redis (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
SENTRY_DSN=

# Trustee endpoints (for share distribution)
TRUSTEE_1_ENDPOINT=https://trustee1.example.com/api/receive-share
